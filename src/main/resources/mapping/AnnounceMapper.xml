<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.oa.mapper.AnnounceMapper">
  <resultMap id="BaseResultMap" type="com.example.oa.po.Announce">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="state" jdbcType="INTEGER" property="state" />
    <result column="startTime" jdbcType="DATE" property="starttime" />
    <result column="endTime" jdbcType="DATE" property="endtime" />
    <result column="subTime" jdbcType="DATE" property="subtime" />
    <result column="userId" jdbcType="INTEGER" property="userid" />
    <result column="content" jdbcType="VARCHAR" property="content" />
  </resultMap>
  <resultMap id="AnnounceDetail" type="com.example.oa.po.Announce">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="startTime" jdbcType="DATE" property="starttime" />
    <result column="endTime" jdbcType="DATE" property="endtime" />
    <result column="subTime" jdbcType="DATE" property="subtime" />
    <result column="state" jdbcType="INTEGER" property="state" />
    <result column="content" jdbcType="VARCHAR" property="content" />
    <association property="user" javaType="User">
      <id column="id" jdbcType="INTEGER" property="id" />
      <result column="loginName" jdbcType="VARCHAR" property="loginname" />
      <result column="password" jdbcType="VARCHAR" property="password" />
      <result column="name" jdbcType="VARCHAR" property="name" />
      <result column="idcard" jdbcType="VARCHAR" property="idcard" />
      <result column="age" jdbcType="INTEGER" property="age" />
      <result column="phone" jdbcType="VARCHAR" property="phone" />
      <result column="sex" jdbcType="INTEGER" property="sex" />
      <result column="job" jdbcType="VARCHAR" property="job" />
      <result column="roleId" jdbcType="INTEGER" property="roleid" />
      <result column="photo" jdbcType="VARCHAR" property="photo" />
      <result column="orgId" jdbcType="INTEGER" property="orgid" />
      <result column="deptId" jdbcType="INTEGER" property="deptid" />
      <result column="state" jdbcType="INTEGER" property="state" />
    </association>
  </resultMap>

  <sql id="Base_Column_List">
    id, title, startTime, endTime, subTime, userId, content,state
  </sql>
  <!-- 查询通告条数  -->
  <select id="countAnnounce" resultType="int" >
    SELECT count(1)
    from `announce`
      <where>
          <if test="title!=null and title!=''">
              title like concat('%',#{title},'%')
          </if>
          <if test="time1!=null" >
              and TO_DAYS(A.subTime) &gt;=  TO_DAYS  (#{time1})
          </if>
          <if test="time2!=null">
              and TO_DAYS(A.subTime) &lt;=  TO_DAYS  (#{time2})
          </if>
      </where>
  </select>
  <!--根据id查询通告详细信息-->
  <select id="lookAnnounceById" resultMap="AnnounceDetail">
    select A.id,
           A.title,
           A.startTime,
           A.endTime,
           A.subTime,
           A.content,
           A.state,
           U.`name` from announce A
           INNER JOIN `user` AS U ON A.userId = U.id
           where A.id=#{id,jdbcType=INTEGER}
  </select>
  <!--查询通告列表-->
  <select id="queryAnnounceList" resultMap="AnnounceDetail">
    SELECT
           A.id,
           A.title,
           A.startTime,
           A.endTime,
           A.subTime,
           A.content,
           A.state,
           U.`name`
    FROM
         announce AS A
    left JOIN `user` AS U
    ON A.userId = U.id
    <where>
      <if test="title!=null and title!=''">
        title like concat('%',#{title},'%')
      </if>
      <if test="time1!=null" >
        and TO_DAYS(A.subTime) &gt;=  TO_DAYS  (#{time1})
      </if>
      <if test="time2!=null">
        and TO_DAYS(A.subTime) &lt;=  TO_DAYS  (#{time2})
      </if>
    </where>
    order BY A.id
    limit ${pageNumber},${pageSize}

  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from announce
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <!-- 添加一条通告 -->
  <insert id="insert" parameterType="com.example.oa.po.Announce">
    insert into announce (title, startTime,
      endTime, subTime, userId, 
      content,state)
    values (#{announce.title,jdbcType=VARCHAR}, #{announce.starttime,jdbcType=DATE},
      #{announce.endtime,jdbcType=DATE},now(), #{announce.userid,jdbcType=INTEGER},
      #{announce.content,jdbcType=VARCHAR},#{announce.state,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.example.oa.po.Announce">
    insert into announce
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="title != null">
        title,
      </if>
      <if test="starttime != null">
        startTime,
      </if>
      <if test="endtime != null">
        endTime,
      </if>
      <if test="subtime != null">
        subTime,
      </if>
      <if test="userid != null">
        userId,
      </if>
      <if test="state != null">
        state,
      </if>
      <if test="content != null">
        content,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="title != null">
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="starttime != null">
        #{starttime,jdbcType=DATE},
      </if>
      <if test="endtime != null">
        #{endtime,jdbcType=DATE},
      </if>
      <if test="subtime != null">
        #{subtime,jdbcType=DATE},
      </if>
      <if test="userid != null">
        #{userid,jdbcType=INTEGER},
      </if>
      <if test="state != null">
        #{state,jdbcType=INTEGER},
      </if>
      <if test="content != null">
        #{content,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.example.oa.po.Announce">
    update announce
    <set>
      <if test="title != null">
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="starttime != null">
        startTime = #{starttime,jdbcType=DATE},
      </if>
      <if test="endtime != null">
        endTime = #{endtime,jdbcType=DATE},
      </if>
      <if test="subtime != null">
        subTime = now(),
      </if>
      <if test="userid != null">
        userId = #{userid,jdbcType=INTEGER},
      </if>
      <if test="content != null">
        content = #{content,jdbcType=VARCHAR},
      </if>
      <if test="state != null">
        state =#{state,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <!--根据id修改通告状态-->
  <update id="updateByPrimaryKey" parameterType="int">
    update announce
    set
      subTime = now(),
      state = 2
    where id = #{value}
  </update>
</mapper>